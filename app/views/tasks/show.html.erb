<div class="container m-5">
  <h1><%= @task.title %></h1>

  <p class="lead">Note: <%= @task.details %></p>

  <% if @task.completed %>
    <input type="checkbox" checked> This task has been completed!</input>
  <% else %>
    <input type="checkbox"> This task is not completed yet</input>
  <% end %>

  <br>

  <hr class="solid">

  <ul class="list-inline">
    <li class="list-inline-item"><i class="fa fa-pencil-square"></i> <%= link_to 'Edit task', edit_path(@task) %></li>
    <li class="list-inline-item"><i class="fa fa-trash-o"></i> <%= link_to 'Delete task', task_path(@task), method: :delete, data: { confirm: 'Are you sure?' } %></li>
    <li class="list-inline-item"><i class="fa fa-chevron-left"></i> <%= link_to 'Back to list', root_path %></li>
  </ul>

  <!-- <a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/tasks">
    Delete the task
  </a> -->

</div>

